<link href="~/css/Validation.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Login";
}
@using newsSite.Models.ViewModels;
@model LoginViewModel;

<div class="container col-md-6">
    <form asp-action="LoginConfirm" asp-controller="Account" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="mb-2">Email address or User name</label>
            <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Email"></span>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label class="mb-2">Password</label>
            <input asp-for="Password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="form-check mb-2">
            <input name="RememberMe" type="checkbox" class="form-check-input" value="1">
            <label class="form-check-label" for="exampleCheck1">Keep me signed in</label>
        </div>
        <button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
        <label class="label-danger">@(TempData["GlobalAuthenticationMessage"])</label>
    </form>
    @*<a class="btn btn-info" asp-action="GoogleLogin" asp-controller="account">Login With Google</a>*@
</div>



