@using Microsoft.AspNetCore.Identity
@using newsSite.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="nav navbar-nav navbar-right" style="padding-left:20px;">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>
            <ul class="dropdown-menu">
                @if (User.IsInRole("bloggers"))
                {
                    <li><a asp-action="addarticle" asp-controller="Post" asp-area="bloggers">New Article</a></li>
                }
                @if (User.IsInRole("admins"))
                {
                    <li>
                        <a asp-action="index" asp-controller="ManageUsers" asp-area="admins">Manage Users</a>
                    </li>
                }
                <li><a asp-action="logout" asp-controller="account">Logout</a></li>
            </ul>
        </li>
    }
    else
    {
        <li><a asp-action="login" asp-controller="account">Login</a></li>
        <li><a asp-action="signup" asp-controller="account">Signup</a></li>
    }
</ul>
