@model List<Article>
<div class="technology">
    <div class="container" style="margin-top:50px;">
        <div class="col-md-9 technology-left">
            <div class="tech-no">
                @foreach (var item in Model.ToList())
                {
                    <div class="soci">
                        <ul>
                            <li><a href="#" class="facebook-1"> </a></li>
                            <li><a href="#" class="facebook-1 twitter"> </a></li>
                            <li><a href="#" class="facebook-1 chrome"> </a></li>
                            <li><a href="#"><i class="glyphicon glyphicon-envelope"> </i></a></li>
                            <li><a href="#"><i class="glyphicon glyphicon-print"> </i></a></li>
                            <li><a href="#"><i class="glyphicon glyphicon-plus"> </i></a></li>
                        </ul>
                    </div>
                    <div class="tc-ch">

                        <div class="tch-img">
                            @if (item.ImageThumbnail != null)
                            {
                                <a href="article/@item.Id"><img src="data:image;base64,@Convert.ToBase64String(item.ImageThumbnail)" class="img-responsive" alt="@item.Title"></a>
                            }
                            else
                            {
                                <a href="article/@item.Id"><img src="~/Layout/images/1.jpg" class="img-responsive" alt="@item.Title"></a>
                            }
                        </div>
                        <a class="blog blue" asp-action="index" asp-route-category="@item.Category.Name">@item.Category.Name</a>
                        <h3><a href="article/@item.Id">@item.Title</a></h3>
                        <p>@item.Body</p>

                        <div class="blog-poast-info">
                            <ul>
                                <li><i class="glyphicon glyphicon-user"> </i><a class="admin" href="#">@item.Author.FirstName @item.Author.LastName </a></li>
                                <li><i class="glyphicon glyphicon-calendar"> </i>@item.DateTime</li>
                                <li><i class="glyphicon glyphicon-comment"> </i><a class="p-blog" href="#">@item.Comments.Count</a></li>
                                <li><i class="glyphicon glyphicon-eye-open"> </i>@item.TotalViews</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- technology-right -->
        <div class="col-md-3 technology-right">
            <div class="blo-top">
